{
  "name": "abstract-form-builder",
  "version": "1.0.0",
  "description": "Abstract Form Builder Package",
  "scripts": {
    "dev:css": "npx @tailwindcss/cli -i ./resources/styles/input.css -o ./resources/styles/public/larafields.css --watch",
    "dev:js": "esbuild resources/js/larafields.js --bundle --outfile=resources/js/public/larafields.js --sourcemap --watch",
    "dev": "npm-run-all --parallel dev:css dev:js",
    "build:css:dev": "npx @tailwindcss/cli -i ./resources/styles/input.css -o ./resources/styles/public/larafields.css --sourcemap",
    "build:js:dev": "esbuild resources/js/larafields.js --bundle --outfile=resources/js/public/larafields.js --sourcemap",
    "build:dev": "npm-run-all --parallel build:css:dev build:js:dev",
    "build:css:prod": "npx @tailwindcss/cli -i ./resources/styles/input.css -o ./resources/styles/public/larafields.css --minify",
    "build:js:prod": "esbuild resources/js/larafields.js --bundle --outfile=resources/js/public/larafields.min.js --minify",
    "build:prod": "npm-run-all --parallel build:css:prod build:js:prod",
    "build": "npm run build:prod",
    "watch": "npm run dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "tailwindcss": "^4.0.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.20.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31"
  }
}
